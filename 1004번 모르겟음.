

import java.util.Scanner;

public class Main {
 
	public static void main(String[] args) {
		
	Scanner sc = new Scanner(System.in);
	
	 int a =sc.nextInt(); // 테스트 케이스 
	 int arr[] = new int[4];
	 int arr2[] = new int[3];
	 int count = 0;
	 
	 
	 //arr[0]=출발점x1 arr[1]=출발점y1 arr[2]= 도착점x2 arr[3]=도착점y2
	 
	 for(int i=0;i<a;i++) {
		 for(int l=0;i<arr.length;i++) {
		arr[l]= sc.nextInt();
		}
		 
		int b= sc.nextInt();
			for(int j=0;j<b;j++) {
				for(int k=0;k<3;k++) {
					
					arr2[k] = sc.nextInt();
		//arr2[0] = cx1 arr2[1] = cy1 arr2[2] = r
				}
	
				if(Math.sqrt(Math.pow(arr2[0]-arr[0], 2)+(Math.pow(arr2[1]-arr[1], 2) ))<arr2[2]) {
					count++;}
					if(Math.sqrt(Math.pow(arr2[0]-arr[2], 2)+(Math.pow(arr2[1]-arr[3], 2) ))>arr2[2]) {
						count++;
					}
					
					
				} // 여기 for문이 끝나면 젤위 for문으로 올라가야하는데 왜 안올라가지지?
			System.out.println(count);
			}// 젤 처음 for문 
		
	 		}
	}
